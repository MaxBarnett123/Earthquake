#include <iostream>
#include <string>

using namespace std;

    int choice = 0;
    int DepositAmount = 0;
    int withdrawAmount = 0;
    int amount = 0;
    int Balance = 0;
    bool Exit = false;

void Menu() {

    cout << "" << endl;
    cout << "1: Deposit" << endl;
    cout << "2: Withdraw" << endl;
    cout << "3: View Balance" << endl;
    cout << "4: Exit" << endl;
    cout << "Please enter your choice: ";
}

void Deposit() {

    cout << "Enter amount to deposit: ";
    cin >> amount;

    Balance += amount;
    cout << "Blance: " << Balance << endl;
}

void Withdraw() {
    cout << "Enter amount to withdraw: ";
    cin >> amount;

    if (amount > Balance) {
        cout << "You can't withdraw more then your balance" << endl;
        cout << "Your balance is: " << Balance << endl;

    } else {

        Balance -= amount;
        cout << "Withdrew: " << amount << endl;
        cout << "Balance: " << Balance << endl;
    }
}

void ViewBalance() {
    cout << "Current balance: " << Balance << endl;
}


int main() {



    while (Exit == false)
    {


    Menu();
    cin >> choice;

    if (choice == 1) {

    Deposit();

    } else if (choice == 2) {

    Withdraw();


    } else if (choice == 3) {

    ViewBalance();


    } else if (choice == 4) {

    Exit = true;
    cout << "Closed" << endl;


    } else {
        cout << "Invalid choice!" << endl;
    }
    
}




    return 0;
}
