#include <iostream>
#include <string>

using namespace std;

int main() {
    int Temp[6];
    int totalTemp = 0;

    cout << "What was the temperature on Monday?" << endl;
    cin >> Temp[0];

    cout << "What was the temperature on Tuesday?" << endl;
    cin >> Temp[1];

    cout << "What was the temperature on Wednesday?" << endl;
    cin >> Temp[2];

    cout << "What was the temperature on Thursday?" << endl;
    cin >> Temp[3];

    cout << "What was the temperature on Friday?" << endl;
    cin >> Temp[4];

    cout << "What was the temperature on Saturday?" << endl;
    cin >> Temp[5];

    cout << "What was the temperature on Sunday?" << endl;
    cin >> Temp[6];

    for (int i = 0; i < 7; i++) {
        totalTemp += Temp[i];
    }

    totalTemp = totalTemp / 7;

    cout << "The average temperature for the week is " << totalTemp << " degrees." << endl;

    cout <<"These are the days that were above 25 degrees: " << endl;

    for (int i = 0; i < 7; i++) {
        if (Temp[i] > 25) {
            switch(i) {
                case 0:
                    cout << "Monday" << endl;
                    break;
                case 1:
                    cout << "Tuesday" << endl;
                    break;
                case 2:
                    cout << "Wednesday" << endl;
                    break;
                case 3:
                    cout << "Thursday" << endl;
                    break;
                case 4:
                    cout << "Friday" << endl;
                    break;
                case 5:
                    cout << "Saturday" << endl;
                    break;
                case 6:
                    cout << "Sunday" << endl;
                    break;
            }
        }
    }
    

    return 0;
}
